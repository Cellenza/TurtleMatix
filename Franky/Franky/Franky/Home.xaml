<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:franky="clr-namespace:Franky;assembly=Franky"
             x:Class="Franky.Home">
  <franky:ZoneInstructions BackgroundColor="Yellow">
    
    <!-- Background and drop instructions -->
    <franky:DropInstructions
      TranslationX="350" TranslationY="0"
      WidthRequest="700" HeightRequest="700"
      BackgroundColor="#eeeeee" x:Name="DropInstructions" />
    <AbsoluteLayout WidthRequest="350" BackgroundColor="White" HeightRequest="700" TranslationY="0" x:Name="MenuBackground" />

    <!-- Top menu -->
    <AbsoluteLayout WidthRequest="350" HeightRequest="60">
      <Image Source="Franky_Logo_60.png" />
      <Button Image="RunButton.png" TranslationX="60" BackgroundColor="White" BorderColor="Transparent" HeightRequest="60" WidthRequest="60" Clicked="RunClick" />
      <Button Image="RunButton.png" TranslationX="120" BackgroundColor="White" BorderColor="Transparent" HeightRequest="60" WidthRequest="60" Clicked="CleanClick" />
    </AbsoluteLayout>

    <!-- Bottom menu -->
    <Image Source="CellenzaLogo.png" x:Name="MenuBottom" />

    <!-- Instructions on left menu -->
    <franky:InstructionButton BackgroundColor="#9ecf95" TranslationX="10" Text="Avancer" Instruction="Go" TranslationY="70" />
    <franky:InstructionButton BackgroundColor="#eca78c" TranslationX="10" Text="Tourner a droite" Value="90" Instruction="TurnRight" TranslationY="130" />
    <franky:InstructionButton BackgroundColor="#eca78c" TranslationX="10" Text="Tourner a gauche" Value="90" Instruction="TurnLeft" TranslationY="190" />
    <franky:InstructionButton BackgroundColor="#aee2f6" TranslationX="10" Text="Reculer" Instruction="Back" TranslationY="250" />
    <franky:InstructionButton BackgroundColor="#f7e181" TranslationX="10" Text="Répéter 2 fois" Value="2" Instruction="ForEach" TranslationY="310" />
    <franky:InstructionButton BackgroundColor="#f7e181" TranslationX="10" Text="Répéter 4 fois" Value="4" Instruction="ForEach" TranslationY="370" />

    <!-- Fake instruction when drag instruction to the drop location -->
    <franky:FakeInstructionButton />
  </franky:ZoneInstructions>

</ContentPage>